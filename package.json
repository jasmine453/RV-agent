{
  "name": "rv-agent-api",
  "version": "2.0.0",
  "description": "RV-Agent Backend API with DeepSeek Integration - Optimized Version",
  "main": "api-server.js",
  "scripts": {
    "start": "node api-server.js",
    "dev": "nodemon api-server.js",
    "install-deps": "npm install",
    "lint": "eslint . --ext .js --ignore-pattern node_modules/ --ignore-pattern dist/",
    "lint:fix": "eslint . --ext .js --fix --ignore-pattern node_modules/ --ignore-pattern dist/",
    "format": "prettier --write \"**/*.{js,json,md,css}\" --ignore-path .gitignore",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "optimize:images": "node scripts/optimize-images.js",
    "build:css": "cleancss -o dist/style.min.css style.css",
    "build": "npm run build:css && npm run optimize:images",
    "clean": "rimraf dist/ logs/ coverage/",
    "cleanup": "node scripts/cleanup-project.js",
    "setup": "node scripts/setup.js"
  },
  "keywords": [
    "rv-agent",
    "deepseek",
    "document-analysis",
    "enterprise-restructuring",
    "ai",
    "bankruptcy",
    "restructuring"
  ],
  "author": "RV-Agent Team - 华东政法大学",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "mammoth": "^1.11.0",
    "multer": "^1.4.5-lts.1",
    "node-schedule": "^2.1.1",
    "openai": "^4.20.1",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "redis": "^4.6.11",
    "tesseract.js": "^5.1.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "clean-css-cli": "^5.6.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-webp": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/**/node_modules/**",
      "!**/node_modules/**",
      "!tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  }
}
